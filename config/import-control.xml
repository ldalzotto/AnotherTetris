<!DOCTYPE import-control PUBLIC
        "-//Puppy Crawl//DTD Import Control 1.3//EN"
        "http://checkstyle.sourceforge.net/dtds/import_control_1_3.dtd">


<import-control pkg="com.ldz">
    <allow pkg="java.*" regex="true"></allow>
    <subpackage name="tet.physics.debugger">
        <subpackage name="impl">
            <allow pkg="com.ldz.tet.physics.debugger.itf"></allow>
            <allow pkg="com.badlogic.gdx"></allow>
        </subpackage>
        <subpackage name="itf">
        </subpackage>
    </subpackage>
    <subpackage name="tet.shape.debugger">
        <subpackage name="impl">
            <allow pkg="com.badlogic.*" regex="true"></allow>
            <allow pkg="com.ldz.tet.physics.debugger.itf.*" regex="true"></allow>
            <allow pkg="com.ldz.tet.physics.debugger.*" regex="true"></allow>
        </subpackage>
        <subpackage name="itf">
            <allow pkg="com.badlogic.*" regex="true"></allow>
        </subpackage>
    </subpackage>
</import-control>
